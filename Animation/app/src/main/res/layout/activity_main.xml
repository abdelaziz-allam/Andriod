<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trees"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:background="@android:color/background_light"
        android:text="Welcome Back to our Animation Section"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_show_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="325dp"
        android:background="@android:color/holo_orange_dark"
        android:text="show animation images"
        android:textColor="@android:color/background_light"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="475dp"
        android:background="@android:color/holo_orange_dark"
        android:onClick="showOtherAnimationActivity"
        android:text="Other Animations"
        android:textColor="@android:color/background_light"
        android:textSize="22dp" />

    <Button
        android:id="@+id/btn_colored_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="388dp"
        android:background="@android:color/holo_orange_dark"
        android:onClick="showAnimationColoredActivity"
        android:text="Show Animation Colored"
        android:textColor="@android:color/background_light"
        android:textSize="22dp" />

</RelativeLayout>